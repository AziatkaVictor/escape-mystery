[logic]
active = sr_idle@start

[sr_idle@start]
on_actor_inside = sr_idle@wait

[sr_idle@wait]
on_game_timer = 10 | sr_idle@tip_1 %=create_subtitles(st_random_stalker_1:st_bar_talk_1)%
on_actor_outside = sr_idle@start

[sr_idle@tip_1]
on_signal = sound_end | sr_idle@tip_2 %=create_subtitles(st_random_stalker_2:st_bar_talk_2)%

[sr_idle@tip_2]
on_signal = sound_end | sr_idle@tip_3 %=create_subtitles(st_random_stalker_1:st_bar_talk_3)%

[sr_idle@tip_3]
on_signal = sound_end | %=clear_subtitles +bar_talk_end% nil