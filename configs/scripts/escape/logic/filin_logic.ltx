[logic]
active = sr_idle@wait

[sr_idle@wait]
on_info = {+sidor_quest_end} sr_idle@play

[sr_idle@play]
on_actor_inside = sr_idle@timer

[sr_idle@timer]
on_game_timer = 10 | %=create_subtitles(st_actor_name:st_filin_dead)% sr_idle@timer_2

[sr_idle@timer_2]
on_signal = sound_end | %=clear_subtitles()% sr_idle@stop

[sr_idle@stop]
on_game_timer = 5 | %+filin_dead% nil