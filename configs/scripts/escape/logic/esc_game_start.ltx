[logic]
active = sr_idle@start

[sr_idle@start]
on_info = {!black_screen} %=turn_off(esc_teleport_light) =enable_actor_torch()% sr_idle@wait

[sr_idle@wait]
on_game_timer = 10 | sr_idle@tip_1 %=create_subtitles(st_actor_name:st_start_game_1:start_game_1) +sg_dc_k_kruger_startgame_dialog_done%

[sr_idle@tip_1]
on_signal = sound_end | sr_idle@tip_2 %=create_subtitles(st_main_army:st_start_game_2:start_game_2)%

[sr_idle@tip_2]
on_signal = sound_end | sr_idle@start_quest %=create_subtitles(st_actor_name:st_start_game_3:start_game_3)%

[sr_idle@start_quest]
on_signal = sound_end | %=give_task(esc_storyline_search) =clear_subtitles()% nil