[sr_idle@wait_for_item_3]
on_signal = sound_end | %=create_subtitles(st_actor_name:st_found_docs_3)% sr_idle@wait_for_item_4

[sr_idle@wait_for_item_4]
on_signal = sound_end | %=create_subtitles(st_actor_name:st_found_docs_4)% sr_idle@wait_for_item_clear

[sr_idle@wait_for_item_clear]
on_signal = sound_end | %=clear_subtitles +found_docs% nil