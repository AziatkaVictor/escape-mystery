[logic]
active = sr_idle@init

[sr_idle@init]
on_info = %=disable_campfire(sf_lager_campfire_1)% sr_idle@wait

[sr_idle@wait]
on_actor_inside = %=run_postprocess(blink) =enable_campfire(sf_lager_campfire_1)% sr_idle@start

[sr_idle@start]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_game_timer = 10 | %=create_subtitles(st_voice:st_lager_text_1)% sr_idle@tip_2

[sr_idle@tip_2]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_lager_text_2)% sr_idle@tip_3

[sr_idle@tip_3]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_lager_text_3)% sr_idle@tip_4

[sr_idle@tip_4]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_lager_text_4)% sr_idle@tip_end

[sr_idle@tip_end]
on_signal = sound_end | %=disable_campfire(sf_lager_campfire_1) =clear_subtitles() =run_postprocess(blink) =set_weather(default_secret_forest:true)% nil