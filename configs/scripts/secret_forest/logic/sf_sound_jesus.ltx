[logic]
active = sr_idle@wait

[sr_idle@wait]
on_actor_inside = %=run_postprocess(blink)% sr_idle@text_1

[sr_idle@text_1]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_game_timer = 10 | %=create_subtitles(st_voice:st_jesus_1)% sr_idle@text_2

[sr_idle@text_2]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_jesus_2)% sr_idle@text_3

[sr_idle@text_3]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_jesus_3)% sr_idle@text_4

[sr_idle@text_4]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_jesus_4)% sr_idle@text_5

[sr_idle@text_5]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_jesus_5)% sr_idle@text_6

[sr_idle@text_6]
on_info = %=set_weather(default_secret_forest_foggy:true)%
on_signal = sound_end | %=create_subtitles(st_voice:st_jesus_6)% sr_idle@tip_end

[sr_idle@tip_end]
on_signal = sound_end | %=run_postprocess(blink) =set_weather(default_secret_forest:true) =clear_subtitles% nil